# Multilingual Text Management System - Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# FTP Configuration
# =============================================================================

# FTP Server Settings
FTP_HOST=your-ftp-server.com
FTP_PORT=21
FTP_USERNAME=your-username
FTP_PASSWORD=your-password

# FTP Security Settings
FTP_USE_TLS=true
FTP_PASSIVE=true
FTP_TIMEOUT=30
FTP_BASE_PATH=/

# =============================================================================
# Translation Service Configuration
# =============================================================================

# Translation Service (google, deepl, azure, openai)
TRANSLATION_SERVICE=google

# API Keys (required for some services)
TRANSLATION_API_KEY=
DEEPL_API_KEY=
OPENAI_API_KEY=
AZURE_TRANSLATOR_KEY=

# API Endpoints (optional)
TRANSLATION_API_ENDPOINT=
AZURE_TRANSLATOR_ENDPOINT=

# Language Settings
SOURCE_LANGUAGE=en
TRANSLATION_LANGUAGES=sk,en,hu,de,pl

# Translation Behavior
TRANSLATION_MAX_RETRIES=3
TRANSLATION_RETRY_DELAY=1.0
TRANSLATION_CACHE=true
PRESERVE_FORMATTING=true

# =============================================================================
# File Processing Configuration
# =============================================================================

# Supported File Extensions (comma-separated)
SUPPORTED_EXTENSIONS=.txt,.md,.html,.json,.xml

# Processing Limits
MAX_FILE_SIZE=10485760
BATCH_SIZE=10
PARALLEL_WORKERS=4

# File Handling
BACKUP_ORIGINAL=true
OVERWRITE_EXISTING=false

# =============================================================================
# Logging Configuration
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Directory
LOG_DIR=logs

# Log Features
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=true
ENABLE_JSON_LOG=true

# Log Rotation
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# Application Settings
# =============================================================================

# Default Directories
DEFAULT_INPUT_DIR=input
DEFAULT_OUTPUT_DIR=output
DEFAULT_REMOTE_PATH=translations

# Performance Settings
DEFAULT_MAX_WORKERS=4
DEFAULT_TIMEOUT=30

# Feature Flags
ENABLE_PARALLEL_PROCESSING=true
ENABLE_FTP_UPLOAD=true
ENABLE_CACHING=true
ENABLE_MONITORING=true

# =============================================================================
# Security Settings
# =============================================================================

# SSL/TLS Configuration
SSL_VERIFY=true
SSL_CERT_PATH=
SSL_KEY_PATH=

# Encryption (for sensitive data)
ENCRYPTION_KEY=

# Access Control
ALLOWED_IPS=
RATE_LIMIT=100
